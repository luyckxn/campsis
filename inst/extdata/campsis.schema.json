{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://calvagone.github.io/campsis.doc/schema/1.0/campsis.schema.json",
  "$comment": "Campsis JSON Schema v1.0 Â© 2025 [Nicolas Luyckx / Calvagone]. Licensed under CC BY 4.0 (https://creativecommons.org/licenses/by/4.0/). You are free to share and adapt this schema with attribution.",
  "title": "Campsis JSON Schema",
  "$ref": "#/$defs/dataset",
  "$defs": {
    "dataset": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/$defs/arm"
          },
          {
            "$ref": "#/$defs/dataset_config"
          }
        ]
      }
    },
    "arm": {
      "type": "object",
      "properties": {
        "type": {
          "const": "arm"
        },
        "list": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/arm_attributes"
              },
              {
                "$ref": "#/$defs/bolus"
              },
              {
                "$ref": "#/$defs/infusion"
              },
              {
                "$ref": "#/$defs/observations"
              },
              {
                "$ref": "#/$defs/covariate"
              }
            ]
          }
        }
      },
      "required": [
        "list"
      ],
      "additionalProperties": false
    },
    "arm_attributes": {
      "type": "object",
      "properties": {
        "type": {
          "const": "arm_attributes"
        },
        "subjects": {
          "type": "integer",
          "description": "Number of subjects in the arm",
          "minimum": 0
        },
        "label": {
          "type": "string",
          "description": "Arm label"
        }
      },
      "required": [
        "subjects",
        "label"
      ],
      "additionalProperties": false
    },
    "bolus": {
      "type": "object",
      "properties": {
        "type": {
          "const": "bolus"
        },
        "time": {
          "type": "number",
          "description": "Time at which the bolus is given"
        },
        "amount": {
          "type": "number",
          "description": "Dose amount"
        },
        "compartment": {
          "type": "array",
          "description": "Compartment where the dose is given. The dose can be given into multiple compartments at once.",
          "items": {
            "type": "string"
          }
        },
        "ii": {
          "type": "number",
          "description": "Inter-dose interval"
        },
        "addl": {
          "type": "integer",
          "description": "Number of additional doses"
        }
      },
      "required": [
        "time",
        "amount",
        "compartment"
      ],
      "additionalProperties": false
    },
    "infusion": {
      "type": "object",
      "properties": {
        "type": {
          "const": "infusion"
        },
        "time": {
          "type": "number"
        },
        "amount": {
          "type": "number"
        },
        "compartment": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ii": {
          "type": "number"
        },
        "addl": {
          "type": "integer"
        },
        "duration": {
          "type": "number"
        }
      },
      "required": [
        "time",
        "amount",
        "compartment"
      ],
      "additionalProperties": false
    },
    "observations": {
      "type": "object",
      "properties": {
        "type": {
          "const": "observations"
        },
        "times": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            {
              "$ref": "#/$defs/time_sequence"
            }
          ]
        },
        "rep": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            {
              "$ref": "#/$defs/dosing_schedule"
            }
          ]
        }
      },
      "required": [
        "times"
      ],
      "additionalProperties": false
    },
    "time_sequence": {
      "type": "object",
      "properties": {
        "type": {
          "const": "time_sequence"
        },
        "start": {
          "type": "number",
          "description": "Start time"
        },
        "end": {
          "type": "number",
          "description": "End time (this time may not be included in the final sequence depending on the chosen step)"
        },
        "by": {
          "type": "number",
          "description": "Step between two consecutive times"
        }
      },
      "required": [
        "start",
        "end"
      ]
    },
    "dosing_schedule": {
      "type": "object",
      "properties": {
        "type": {
          "const": "dosing_schedule"
        }
      },
      "required": []
    },
    "cyclic_schedule": {
      "type": "object",
      "properties": {
        "type": {
          "const": "cyclic_schedule"
        },
        "duration": {
          "type": "number",
          "description": "Duration of the cyclic period"
        },
        "repetitions": {
          "type": "integer",
          "description": "Number of additional cyclic periods"
        }
      },
      "required": [
        "duration",
        "repetitions"
      ]
    },
    "dataset_config": {
      "type": "object",
      "properties": {
        "type": {
          "const": "dataset_config"
        },
        "export_tsld": {
          "type": "boolean",
          "description": "Export variable TSLD (time since last dose) in the dataset for rxode2 / mrgsolve"
        },
        "export_tdos": {
          "type": "boolean",
          "description": "Export variable TDOS (time of current dose) in the dataset for rxode2 / mrgsolve"
        }
      },
      "required": [
        "export_tsld",
        "export_tdos"
      ]
    },
    "distribution": {
      "title": "Base distribution",
      "type": "object",
      "properties": {
      },
      "required": [
      ]
    },
    "covariate": {
      "title": "Model covariate",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the covariate"
        },
        "distribution": {
          "$ref": "#/$defs/distribution"
        }
      },
      "required": [
        "name",
        "distribution"
      ]
    },
    "constant_distribution": {
      "title": "Constant distribution",
      "allOf": [
        {
          "$ref": "#/$defs/distribution"
        },
        {
          "properties": {
            "type": {
              "const": "constant_distribution"
            },
            "value": {
              "type": "number",
              "description": "Constant value"
            }
          }
        }
      ]
    },
    "fixed_distribution": {
      "title": "Fixed distribution",
      "allOf": [
        {
          "$ref": "#/$defs/distribution"
        },
        {
          "properties": {
            "type": {
              "const": "fixed_distribution"
            },
            "values": {
              "type": "array",
              "description": "Array of constant values (1 per individual)",
              "items": {
                "type": "number"
              }
            }
          }
        }
      ]
    },
    "normal_distribution": {
      "title": "Normal distribution",
      "allOf": [
        {
          "$ref": "#/$defs/distribution"
        },
        {
          "properties": {
            "type": {
              "const": "normal_distribution"
            },
            "mean": {
              "type": "number",
              "description": "Mean value of the normal distribution"
            },
            "sd": {
              "type": "number",
              "description": "Standard deviation of the normal distribution"
            }
          }
        }
      ]
    }
  }
}
